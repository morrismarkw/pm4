<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <decisions>
        <name>Planning_Horizon_Change</name>
        <label>Planning Horizon Change</label>
        <locationX>182</locationX>
        <locationY>323</locationY>
        <defaultConnector>
            <targetReference>Delete</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Decreased</defaultConnectorLabel>
        <rules>
            <name>Planning_Horizon_Change_Increased</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Planning_Horizon_Days__c</leftValueReference>
                <operator>GreaterThan</operator>
                <rightValue>
                    <elementReference>$Record__Prior.Planning_Horizon_days__c</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Times</targetReference>
            </connector>
            <label>Increased</label>
        </rules>
    </decisions>
    <description>Creates or Deletes Resource Available and Target Times depending on change in Planning Horizon.</description>
    <environments>Default</environments>
    <formulas>
        <name>New_End_Date</name>
        <dataType>Date</dataType>
        <expression>{!$Record__Prior.Planning_Horizon_End_Date__c} + {!$Record.Planning_Horizon_Days__c} -{!$Record__Prior.Planning_Horizon_Days__c}</expression>
    </formulas>
    <formulas>
        <name>Previous_End_Date</name>
        <dataType>Date</dataType>
        <expression>{!$Record__Prior.Planning_Horizon_End_Date__c} /* {!$Record.Planning_Horizon_Days__c} (32) Greater than {!$Record__Prior.Planning_Horizon_Days__c} (31) */</expression>
    </formulas>
    <formulas>
        <name>Previous_End_Date_Plus_1</name>
        <dataType>Date</dataType>
        <expression>{!Previous_End_Date} + 1</expression>
    </formulas>
    <interviewLabel>PM: Resource - After U {!$Flow.CurrentDateTime}</interviewLabel>
    <label>PM: Resource - After U</label>
    <processMetadataValues>
        <name>BuilderType</name>
