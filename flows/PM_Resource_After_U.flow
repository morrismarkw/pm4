        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordCreates>
        <name>Create</name>
        <label>Create</label>
        <locationX>50</locationX>
        <locationY>539</locationY>
        <inputReference>Times.Times</inputReference>
    </recordCreates>
    <recordDeletes>
        <name>Delete</name>
        <label>Delete</label>
        <locationX>314</locationX>
        <locationY>431</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Resource__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </filters>
        <filters>
            <field>Date__c</field>
            <operator>GreaterThan</operator>
            <value>
                <elementReference>New_End_Date</elementReference>
            </value>
        </filters>
        <object>Time__c</object>
    </recordDeletes>
    <start>
        <locationX>56</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Planning_Horizon_Change</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Planning_Horizon_days__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Resource__c</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <subflows>
        <name>Times</name>
        <label>Times</label>
        <locationX>50</locationX>
        <locationY>431</locationY>
        <connector>
            <targetReference>Create</targetReference>
        </connector>
        <flowName>PM_Resource_Times</flowName>
        <inputAssignments>
            <name>End_Date</name>
            <value>
                <elementReference>New_End_Date</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>Resource</name>
            <value>
                <elementReference>$Record</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>Start_Date</name>
            <value>
                <elementReference>Previous_End_Date_Plus_1</elementReference>
            </value>
        </inputAssignments>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </subflows>
</Flow>
